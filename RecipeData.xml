        <recipe id="r1">
            <title>Salade Niçoise</title>
            <description>Une salade fraîche et légère idéale pour l'été.</description>
            <cuisine>Française</cuisine>
            <health>Sans gluten</health>
            <budget>15.00</budget>
            <ingredients>
                <ingredient id="i1"><name>Tomate</name><quantity>4</quantity><unit>unités</unit></ingredient>
                <ingredient id="i2"><name>Thon en conserve</name><quantity>200</quantity><unit>grammes</unit></ingredient>
                <ingredient id="i3"><name>Olive noire</name><quantity>50</quantity><unit>grammes</unit></ingredient>
            </ingredients>
            <steps>Coupez les tomates, ajoutez les olives, émiettez le thon, et assaisonnez.</steps>
        </recipe>
        <recipe id="r2">
            <title>Poulet Basquaise</title>
            <description>Un plat convivial et parfumé, riche en saveurs.</description>
            <cuisine>Sud-ouest de la France</cuisine>
            <health>Équilibré</health>
            <budget>20.00</budget>
            <ingredients>
                <ingredient id="i4"><name>Poulet</name><quantity>1</quantity><unit>kg</unit></ingredient>
                <ingredient id="i5"><name>Poivron rouge</name><quantity>2</quantity><unit>unités</unit></ingredient>
                <ingredient id="i6"><name>Tomate</name><quantity>3</quantity><unit>unités</unit></ingredient>
            </ingredients>
            <steps>Faites revenir le poulet, ajoutez les légumes et laissez mijoter.</steps>
        </recipe>
        <!-- Nouvelle recette: Crêpes Suzette -->
        <recipe id="r3">
            <title>Crêpes Suzette</title>
            <description>Un dessert classique français avec une sauce au beurre et à l'orange.</description>
            <cuisine>Française</cuisine>
            <health>Occasionnel</health>
            <budget>10.00</budget>
            <ingredients>
                <ingredient id="i7"><name>Farine</name><quantity>250</quantity><unit>grammes</unit></ingredient>
                <ingredient id="i8"><name>Oeuf</name><quantity>3</quantity><unit>unités</unit></ingredient>
                <ingredient id="i9"><name>Orange</name><quantity>2</quantity><unit>unités</unit></ingredient>
            </ingredients>
            <steps>Préparez les crêpes, réalisez la sauce suzette et nappez les crêpes.</steps>
        </recipe>
